{
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,

    "typeRoots": [
      "./node_modules/@types",
      "./src/common/typings"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "tests/*.ts",
    "_site"
  ]
}
