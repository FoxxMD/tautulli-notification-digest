{
  "extends": "@istanbuljs/nyc-config-typescript",
  "exclude": [
    "node_modules/",
    "**/src/common/schema/**",
    "**/tests/**",
    "register.js",
    "**/src/**/*.d.ts"
  ],
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.js",
    "**/src/**/*.js.map"
  ],
  "extension": [
    ".ts"
  ],
  "reporter": [
    "text-summary",
    "html"
  ],
  "report-dir": "./coverage"
}
